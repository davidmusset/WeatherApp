<!DOCTYPE html>
<html>
  <head>
    <title>Weather App</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:400,400i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="javascripts/script.js" type="text/javascript"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCgceJ_lP2riaH10EOpXxZLrU0Mk7RHzRo&callback=initMap">
    </script>
  </head>
  <body>
    <div class="container">
      <div class="row">
         <div class="col-12 text-center">
          <h1>Bienvenue sur Weather App</h1>
        </div>
      </div>

      <div class="row">
        <div class= "col-6 d-none d-lg-block">
        </div>
        <div class="col-6">
          <form method="POST" action="/add-city">
          <div class="search">

            <div class="text"><p class="textRegular"> Ville</p></div>

              <input type="text" class="inputVille" placeholder="Paris,Lyon..." name="newCity">
              <input type="submit" class="btnSubmit" value="Enregistrer">

          </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div class= "col-6 d-none d-lg-block">
        </div>
        <div class="col-6 erreur">
          <%if(erreur=="True"){%>La ville tapée n'existe pas<%}%></cite>
        </div>
      </div>
      <div class="row mainBody">
        <div class="col-xs-12 col-lg-6">
          <!-- <img src="images/map.png" class="imageLeft"> -->
          <div id="lon" style="display: none;"><%if(cityList[0] == undefined){%> 0 <%}else{%> <%=cityList[cityList.length-1].Lon%> <%}%></div>
          <div id="latt" style="display: none;"><%if(cityList[0] == undefined){%> 0 <%}else{%> <%=cityList[cityList.length-1].Latt%> <%}%></div>
          <div id="map"></div>

        </div>

        <div class="col-xs-12 col-lg-6">
          <ul class="list-group">
              <%
              for(i=0; i<cityList.length;i++){
                %>
            <li class="list-group-item">
              <div class="container">
                <div class="row">
                  <div class="col-2 col-lg-4 text-left">
                    <%=
                      cityList[i].nom
                    %>

                  </div>
                  <div class="col-9 col-lg-7 text-left">
                    <% for(j=0;j<cityList[i].temps.length;j++){ %>
                      <img src="http://openweathermap.org/img/w/<%=cityList[i].img[j]%>.png" width="30px">
                      <%=
                        cityList[i].temps[j];
                      %>
                    <%}%>
                    <p class="tempMatin">  <%= cityList[i].Tmatin%>°C </p>
                    <p class="tempSoir">  <%=cityList[i].Tsoir%>°C </p>
                  </div>
                  <div class="col-1 text-right">
                    <form method="POST" action="/delete-city">
                      <input type="hidden" value="<%=i%>" name="deleteCity">
                      <input type="submit" src="images/deleteIcon.png" id="deleteIcon" value=""></form>
                  </div>
                </div>
              </div>
            </li>
              <%
              }
              %>
            </li>
          </ul>
        </div>


      </div>

    </div>

  </body>
</html>
